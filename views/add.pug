extends layout

block content
  h1 Create New Chat Room

  form(method="post")
    fieldset.form-group
      label(for="name") Name:
      input.form-control(name="name", type="text", placeholder="Enter name here")
      small.text-muted Give your chat room a meaningful name.
    button.btn.btn-primary(type="submit") Create New Chat Room!
  hr
  a.btn.btn-default(href="/admin/rooms") Cancel!
